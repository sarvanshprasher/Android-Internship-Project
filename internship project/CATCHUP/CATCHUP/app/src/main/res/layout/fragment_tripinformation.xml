
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    tools:context="com.example.shivam.catchup.tripinformationFragment">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mypic"
    android:visibility="visible">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textview1"
            android:background="#fdb34451"
            android:textSize="20dp"
            android:text="TRIP INFO"
            android:textColor="#ffffff"

            android:visibility="visible" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tripname"
            android:hint="Trip Name"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/textview1"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/date1"
            android:textStyle="bold"
            android:hint="Start Date  //D-M-Y"
            android:textAlignment="center"
            android:layout_below="@+id/tripname"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/date2"
            android:textStyle="bold"
            android:hint="Return Date //D-M-Y"
            android:textAlignment="center"
            android:layout_below="@id/date1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="TRIP DETAILS"
            android:textSize="20dp"
            android:id="@+id/tripdetails"
            android:textColor="#ffffff"
            android:background="#fdb34451"
            android:layout_below="@id/date2"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:textStyle="bold"
           android:hint="enter your memories how you planed the trip what was reason ,with whom etc.."
           android:inputType="textMultiLine"
           android:id="@+id/details"
           android:layout_below="@id/tripdetails"

           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="TRIP EVENTS EXPENSE"
            android:id="@+id/tripevents"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#fdb34451"
            android:layout_below="@+id/details"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Expense"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/expense"
            android:layout_below="@id/tripevents"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:id="@+id/events"
           android:textStyle="bold"
           android:hint="write the places your experience and special events.etc.."
           android:layout_below="@+id/expense"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="#fdb34451"
    android:textColor="#ffffff"
    android:textSize="20dp"
    android:id="@+id/plces"
    android:text="PLACES YOU LIKED"
    android:layout_below="@+id/events"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/plceslikes"
            android:textStyle="bold"
            android:hint="places you likes"
            android:inputType="textImeMultiLine"
            android:layout_below="@+id/plces"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#fdb34451"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/plces2"
                android:text="PLACES YOU DONT LIKED"
                android:layout_below="@id/plceslikes"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/plces3"
            android:textStyle="bold"
            android:hint="places you didnt likes"
            android:inputType="textImeMultiLine"
            android:layout_below="@+id/plces2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/buttonsubmit1"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:background="#fdb34451"
            android:layout_alignTop="@+id/plces2"
            android:layout_toStartOf="@+id/editText19" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText19"
        android:hint="user_id"
        android:textStyle="bold"
        android:layout_above="@+id/tripname"
        android:layout_alignParentEnd="true" />


</RelativeLayout>




</ScrollView>



