<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="30dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shivam.catchup.Editprofileactivity"
    tools:showIn="@layout/activity_editprofileactivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />

    <EditText
        android:layout_width="200dp"
        android:padding="10dp"
        android:hint="Full Name"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:drawableTint="@color/colorAccent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/fullname"
        android:id="@+id/editText"
        android:textAlignment="textStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/editText2"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:hint="User Name"
        android:drawableStart="@drawable/username"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/view1"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/view"
        android:layout_marginTop="44dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="PRIVATE INFORMATION"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17dp"
        android:background="#c1660306"
        android:textColor="#f4f6f6"
        android:id="@+id/textView"
        android:layout_below="@+id/view1"
        android:layout_alignEnd="@+id/editText2" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/view2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="500dp"
        android:padding="10dp"
        android:hint="Email-ID"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/mail"
        android:textStyle="bold"
        android:id="@+id/editText3"
        android:layout_below="@+id/view2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="500dp"
        android:hint="Mobile No."
        android:textStyle="bold"
        android:drawableStart="@drawable/phone"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:padding="10dp"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:hint="Gender"
        android:textStyle="bold"
        android:drawableStart="@drawable/gender"
        android:padding="10dp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/view3"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

</RelativeLayout>

